<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/browseGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Gallery"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/addImageToGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Image To Gallery"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/downloadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download File"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/pickFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick File"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/writeRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Request"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/manageExternalStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage External Storage"
        android:textAllCaps="false" />

</LinearLayout>